pipeline {
    agent any

    stages{
        
        stage("Git Clone"){
            steps{
                git url: "https://github.com/Ashu210980/Node-todo-app.git", branch: "master"
                echo "Cloning the Git Repo"
            }  
        }
        stage("Build the Image"){
            steps{
                sh "docker build -t todo-node-app ."
                echo "Building the Image"
            }
        }
    } 
}