pipeline {
    agent any

    stages{
        
        stage("Git Clone"){
            steps{
                git url: "https://github.com/Ashu210980/Node-todo-app.git", branch: "master"
                echo "Cloning the Git Repo"
            }  
        }
        stage("Build & Run the Image"){
            steps{
                sh "docker build -t todo-node-app ."
                sh "docker run -d --name node-todo-app -p 8000:8000 todo-node-app"
                echo "Building & Running the Image"
            }
        }
    } 
}